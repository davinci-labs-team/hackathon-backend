generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  JURY
  MENTOR
  ORGANIZER
}

model User {
  id    String    @id @default(uuid())
  supabaseUserId String @unique
  name  String
  createdAt DateTime @default(now())
  role Role      @default(USER)
}

model Announcements {
  id        String   @id @default(uuid())
  title     String
  author    String
  createdAt DateTime @default(now())
  tags      String[]
  description String
  imageUrl  String[]
}